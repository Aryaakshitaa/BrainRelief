<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserFragment"
    android:background="@color/colorPrimary">


    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="151dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user"
        android:id="@+id/userImageForEdit"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImageForEdit"
        android:id="@+id/editusername"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editusername"
        android:id="@+id/editmobileNumber"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editmobileNumber"
        android:id="@+id/editemailid"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editemailid"
        android:id="@+id/editage"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editage"
        android:id="@+id/editgender"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save details"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/editgender"
        android:id="@+id/saveDetails"
        android:layout_marginTop="32dp"
        tools:ignore="PrivateResource" />


</RelativeLayout>